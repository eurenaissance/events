{% set group = membership.group %}
{% set follower = membership.actor %}
{% set animator = group.animator %}

{% extends 'mail/base.html.twig' %}

{% block content %}
    <p>
        {{ 'common.hello'|trans({ '%actor%': animator.firstName }) }}
    </p>

    <p>
        {{ 'mail.group.new_follower.body'|trans({
            '%group%': group.name,
            '%follower%': follower.fullName
        })|raw }}
    </p>
{% endblock %}
