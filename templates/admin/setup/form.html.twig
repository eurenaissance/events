{% extends 'base.html.twig' %}

{% block header '' %}
{% block footer '' %}

{% block page_title 'setup.title'|trans %}

{% block intro %}
    <div class="intro">
        <div class="container">
            <h2 class="intro__title">
                {{ 'setup.title'|trans }}
            </h2>

            {{ 'setup.subtitle'|trans }}
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-7 col-lg-5 col-xl-4">
            {{ form_start(form) }}

            {{ form_row(form.emailAddress) }}
            {{ form_row(form.plainPassword) }}

            <button type="submit" class="btn btn-block btn-primary">
                {{ 'setup.form.button'|trans }}
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
