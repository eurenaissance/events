{% extends 'base.html.twig' %}

{% block page_title 'login.title'|trans %}
{% block flash_message '' %}

{% block intro %}
    <div class="intro">
        <div class="container">
            <h2 class="intro__title">
                {{ 'login.main'|trans }}
            </h2>

            {{ 'login.sub'|trans }}
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-7 col-lg-5 col-xl-4">
            <form method="post">
                {% for message in app.flashes('info') %}
                    <div class="alert alert-primary">
                        {{ message|trans }}
                    </div>
                {% endfor %}

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData)|raw }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <input type="email"
                           value="{{ last_username }}"
                           name="emailAddress"
                           id="emailAddress"
                           class="form-control"
                           placeholder="{{ 'login.fields.email'|trans }}"
                           required autofocus />
                </div>

                <div class="form-group">
                    <input type="password"
                           name="password"
                           id="inputPassword"
                           class="form-control"
                           placeholder="{{ 'login.fields.password'|trans }}"
                           required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-block btn-primary">
                        {{- 'login.button'|trans -}}
                    </button>
                </div>

                <div class="text-center mt-5">
                    <a href="{{ path('app_actor_reset_password_request') }}" class="btn btn-link">
                        {{- 'login.forgot_password'|trans -}}
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
