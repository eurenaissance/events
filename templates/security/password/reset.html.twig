{% extends 'base.html.twig' %}

{% block title 'security.password_reset'|trans %}

{% block body %}
    {{ form_start(form)}}
        {{ form_row(form.password) }}

        <button type="submit">
            {{ 'security.password_reset'|trans }}
        </button>
    {{ form_end(form) }}

    <a href="{{ path('app_login') }}">
        {{- 'security.back_to_login'|trans -}}
    </a>
{% endblock %}
