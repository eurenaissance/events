{% extends 'base.html.twig' %}

{% block title 'actor.profile'|trans %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.birthday) }}
        {{ form_row(form.gender) }}
        {{ form_row(form.emailAddress) }}
        {{ form_row(form.address) }}
        {{ form_row(form.country) }}
        {{ form_row(form.zipCode) }}
        {# since `form.city` is a hidden type we need to explicitly show errors with `form_errors(form.city)` #}
        {{ form_errors(form.city) }}
        {{ form_widget(form.city) }}

        <button type="submit">
            {{ 'actor.profile.save'|trans }}
        </button>
    {{ form_end(form) }}

    <a href="{{ path('app_actor_profile_change_password') }}">
        {{ 'actor.profile.change_password'|trans }}
    </a>
{% endblock %}
