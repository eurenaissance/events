{% extends 'base.html.twig' %}

{% block title 'actor.registration.confirmed.title'|trans %}

{% block body %}
    <p>
        Your registration is now complete.
    </p>

    <h3>Closest groups</h3>
    <div class="row">
        {% for group in closest_groups %}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ group.name }}</h5>
                        <p class="card-text">
                            {{ distance_between(group, app.user).meters }} meters from you.
                        </p>
                        <p class="card-text">{{ group.description }}</p>
                        <a href="{{ path('app_group_view', { slug: group.slug }) }}" class="btn btn-primary">
                            View group
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
