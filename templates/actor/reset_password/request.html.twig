{% extends 'base.html.twig' %}

{% block page_title 'password_reset_request.title'|trans %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-7 col-lg-5 col-xl-4">
            <h4 class="text-center mb-4">
                {{ 'password_reset_request.title'|trans }}
            </h4>

            {{ form_start(form)}}

            {{ form_row(form.emailAddress, { label: 'password_reset_request.email' }) }}

            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-block btn-primary">
                    {{ 'password_reset_request.button'|trans }}
                </button>
            </div>

            <div class="text-center mt-5">
                <a href="{{ path('app_login') }}" class="btn btn-link">
                    {{ 'password_reset_request.back'|trans }}
                </a>
            </div>

            {{ form_end(form)}}
        </div>
    </div>
{% endblock %}
