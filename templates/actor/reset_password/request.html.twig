{% extends 'base.html.twig' %}

{% block title 'security.password_request'|trans %}

{% block body %}
    {{ form_start(form)}}
        {{ form_row(form.emailAddress) }}

        <button type="submit">
            {{ 'security.password_request'|trans }}
        </button>
    {{ form_end(form) }}

    <a href="{{ path('app_login') }}">
        {{ 'security.back_to_login'|trans }}
    </a>
{% endblock %}
